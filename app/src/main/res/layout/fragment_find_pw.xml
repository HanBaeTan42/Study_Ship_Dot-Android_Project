<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/beige_1"
    android:orientation="vertical"
    tools:context=".Fragment.FindPw">

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:text="@string/app_name"
        android:textSize="35sp"
        android:fontFamily="@font/cookierun_regular"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/imageview"
        app:layout_constraintTop_toTopOf="parent"
        />


    <ImageView
        android:id="@+id/content_background"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="390dp"
        android:layout_width="325dp"
        android:contentDescription="@null"
        android:src="@drawable/content_background"
        app:layout_constraintBottom_toTopOf="@id/btn_serachPw"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview"
        />
    <Button
        android:id="@+id/btn_serachPw"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginBottom="100dp"
        android:backgroundTint="@color/blue_2"
        android:fontFamily="@font/cookierun_regular"
        android:text="비밀번호 찾기"
        android:textSize="25sp"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <EditText
        android:id="@+id/id"
        android:layout_width="290dp"
        android:layout_height="60dp"
        android:fontFamily="@font/cookierun_regular"
        android:text="아이디"
        android:textSize="25sp"
        android:minHeight="48dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />

    <EditText
        android:id="@+id/name"
        android:layout_width="290dp"
        android:layout_height="60dp"
        android:fontFamily="@font/cookierun_regular"
        android:minHeight="48dp"
        android:text="이름"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="@id/content_background"
        app:layout_constraintBottom_toBottomOf="@id/content_background"
        app:layout_constraintEnd_toEndOf="@id/content_background"
        app:layout_constraintStart_toStartOf="@id/content_background" />

    <EditText
        android:id="@+id/phonenumber"
        android:layout_width="290dp"
        android:layout_height="60dp"
        android:fontFamily="@font/cookierun_regular"
        android:text="휴대폰 번호"
        android:textSize="25sp"
        android:minHeight="48dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    />

</androidx.constraintlayout.widget.ConstraintLayout>